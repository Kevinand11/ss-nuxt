{
	"compilerOptions": {
	    "module": "commonjs",
	    "noImplicitReturns": true,
	    "noUnusedLocals": true,
	    "outDir": "lib",
	    "sourceMap": false,
	    "strict": true,
	    "baseUrl": "src",
	    "target": "es2017",
	    "removeComments": true,
	    "noImplicitAny": true
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules"
	]
}
