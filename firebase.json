{
  "firestore": {
    "rules": "firebase/firestore.rules",
    "indexes": "firebase/firestore.indexes.json"
  },
  "functions": {
    "source": "firebase/functions",
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build && npm run config:functions:set"
  },
  "database": {
    "rules": "firebase/database.rules.json"
  },
  "storage": {
    "rules": "firebase/storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 5002
    },
    "database": {
      "port": 5003
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
