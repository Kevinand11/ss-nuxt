{
  "name": "stranerd",
  "version": "1.0.0",
  "description": "welcome to the stranerd official page",
  "private": true,
  "scripts": {
    "dev": "npm run env:copy:app && nuxt-ts",
    "build": "nuxt-ts build",
    "start": "nuxt-ts start",
    "generate": "nuxt-ts generate",
    "lint": "eslint src/ --ext .ts,.js,.vue --fix",
    "gcp-build": "npm run build",
    "firebase:start": "npm run firebase:functions:build && npm run env:copy:functions && firebase emulators:start --import ./firebase/docs/exports -P development",
    "firebase:save": "firebase emulators:export ./firebase/docs/exports -P development",
    "firebase:functions:watch": "npm run watch --prefix ./firebase/functions",
    "firebase:functions:build": "npm run build --prefix ./firebase/functions",
    "firebase:functions:lint": "npm run lint --prefix ./firebase/functions",
    "env:set:functions": "node bin/set-functions-config",
    "env:copy:example": "copy env.example.json env.json",
    "env:copy:functions": "node bin/copy-env-functions",
    "env:copy:app": "node bin/copy-env-app"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.15.0",
    "@nuxt/typescript-runtime": "^2.0.0",
    "@nuxtjs/composition-api": "^0.20.2",
    "@nuxtjs/pwa": "^3.2.2",
    "@nuxtjs/style-resources": "^1.0.0",
    "@types/vue2-editor": "^2.6.1",
    "axios": "^0.20.0",
    "bootstrap": "^4.5.2",
    "cookie": "^0.4.1",
    "cookie-parser": "^1.4.5",
    "core-js": "^3.6.5",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase": "^8.2.7",
    "firebase-admin": "^9.5.0",
    "jquery": "^3.5.1",
    "nuxt": "^2.14.7",
    "nuxt-compress": "^4.1.0",
    "popper.js": "^1.16.1",
    "sd-validate": "^1.0.4",
    "sweetalert2": "^10.8.1",
    "vue": "^2.6.12",
    "vue2-editor": "^2.10.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@nuxt/types": "^2.14.5",
    "@nuxt/typescript-build": "^2.0.3",
    "@nuxtjs/eslint-config-typescript": "^2.0.0",
    "@types/cookie": "^0.4.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@typescript-eslint/eslint-plugin": "^2.33.0",
    "@typescript-eslint/parser": "^2.33.0",
    "child_process": "^1.0.2",
    "eslint": "^6.7.2",
    "eslint-plugin-vue": "^7.0.1",
    "firebase-tools": "^9.4.0",
    "husky": "^4.3.0",
    "node-sass": "^5.0.0",
    "nuxt-purgecss": "^1.0.0",
    "sass-loader": "^10.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run firebase:functions:lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinand11/ss-nuxt.git"
  },
  "author": "Kevin Izuchukwu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kevinand11/ss-nuxt/issues"
  },
  "homepage": "https://github.com/kevinand11/ss-nuxt#readme"
}
