{
  "name": "nuxtserver",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "start": "node lib/app.js",
    "watch": "nodemon --watch src --exec ts-node src/app.ts",
    "build": "npm run lint && npm run build --prefix ./application && tsc --build",
    "lint": "npm run lint --prefix ./application",
    "test": "jest",
    "gcp-build": "npm run build"
  },
  "dependencies": {
    "consola": "^2.15.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-subdomain": "^1.0.5",
    "nuxt": "^2.14.6"
  },
  "devDependencies": {
    "@nuxt/types": "^2.14.6",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/csurf": "^1.9.36",
    "@types/express": "^4.17.8",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.10.1",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.7.2",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "nodemon": "^2.0.4",
    "ts-jest": "^26.4.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  },
  "jest": {
    "roots": [
      "./"
    ],
    "testMatch": [
      "**/tests/**/*.[jt]s?(x)",
      "**/tests/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "transform": {
      "^.+\\.ts(x)?$": "ts-jest"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kevinand11/nuxtserver.git"
  },
  "author": "Kevin Izuchukwu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kevinand11/nuxtserver/issues"
  },
  "homepage": "https://github.com/kevinand11/nuxtserver#readme"
}
