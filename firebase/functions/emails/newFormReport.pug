doctype html
html(lang="en")
	head
		title New Report
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
	body(style="font-family: Helvetica;margin:0;padding:1rem;width:100vw;min-height:100vh;box-sizing: border-box;")
		img(src=meta.logo, alt="", style="height:40px;")
		h3 Reporter: #{report.reporterBio.name.fullName} ##{report.reporterId}
		h5 Email: #{report.reporterBio.email}
		h3 Reporting: #{report.reportedBio.name.fullName} ##{report.reportedId}
		h5 Email: #{report.reportedBio.email}
		br
		h5 Title: #{report.title}
		p Message: #{report.message}
		span Sent: #{report.date}
