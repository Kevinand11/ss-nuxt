{
	"rules": {
		"answers": {
			".read": true,
			".write": true,
			".indexOn": ["questionId", "userId"]
		},
		"comments": {
			"answers": {
				"$answerId": {
					".read": true,
					".write": true
				}
			},
			"questions": {
				"$questionId": {
					".read": true,
					".write": true
				}
			}
		},
		"profiles": {
			".read": true,
			".write": true,
			".indexOn": ["roles/isAdmin","bio/email"]
		},
		"subjects": {
			".read": true,
			".write": true,
			".indexOn": ["name"]
		},
		"users": {
			"$userId": {
				".read": true,
				".write": true
			}
		},
		".read": false,
		".write": false
	}
}
