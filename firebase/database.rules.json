{
	"rules": {
		"answers": {
			"$answerId": {
				".read": false,
				"likes": {
					"$userId": {
						".write": "auth.uid != null"
					}
				},
				"ratings": {
					"$userId": {
						".write": "auth.uid != null"
					}
				}
			}
		},
		"comments": {
			"answers": {
				".read": true,
				"$answerId": {
					"$userId": {
						".write": "auth.uid != null"
					}
				}
			},
			"questions": {
				".read": true,
				"$questionId": {
					"$userId": {
						".write": "auth.uid != null"
					}
				}
			}
		},
		"profiles": {
			".read": true,
			".indexOn": [
				"roles/isAdmin","bio/email",
				"rankings/daily","rankings/weekly","rankings/monthly","rankings/quarterly"
			],
			"$userId": {
				".read": true,
				".write": "auth.uid != null"
			}
		},
		"sessions": {
			"$id": {
				"chats": {
					".read": true,
					".write": "auth.uid != null",
					".indexOn": ["dates/createdAt"]
				}
			}
		},
		"users": {
			"$userId": {
				".read": true,
				".write": "auth.uid != $userId"
			}
		},
		".read": false,
		".write": false
	}
}
